        #box{
            border: 1px solid rgb(200, 200, 200);
            box-shadow: rgba(0, 0, 0, 0.1) 0px 5px 5px 2px;
            background: rgba(200, 200, 200, 0.1);
            border-radius: 4px;
            top:50px;
            margin-left: 500px;
            margin-top: 50px;
        }

        h2{
            text-align:center;
            color:black;
        }


    </style>
</head>
<body>
  <nav class="navbar navbar-light bg-faded">
    <a class="navbar-brand" href="#">
    <img src="http://1.bp.blogspot.com/-xveoGuroTlw/VMiZaamwU4I/AAAAAAAAl20/3SX4Pd8wv6Y/s1600/%EA%B3%A0%EB%A0%A4%EB%8C%80%ED%95%99%EA%B5%90+%EB%A1%9C%EA%B3%A0.png" width="40" height="30" class="d-inline-block align-top" alt="">
    대관신청시스템
    </a>
  </nav>
  <br>
  <div class="col-md-offset-4 col-md-4" id="box">
    <h2>Login</h2>
    <hr>
    <div class="text-center image_korea">
      <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSlm7s63ft-ZBmmCkgQZ8DcytEydepLqEbyG4rMisDNO4pOFvRr" class="rounded" alt="koreauniv">
    </div>
    <hr>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <fieldset>
          <div class="form-inputs">
            <div class="form-group">
              <div class="col-md-12">
                <div class="input-group">
                  <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i><%= f.input :email, required: false, autofocus: true %></span>
                  <!-- <input name="first_name" placeholder="학번" class="form-control" type="text"> -->
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-12">
                <div class="input-group">
                  <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i><%= f.input :password, required: false %></span>
                  <!-- <input name="email" placeholder="암호" class="form-control" type="text"> -->
                </div>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
            </div>

          </div>
          <div class="form-group">
            <div class="col-md-12">
              <div class="form-actions">
                <%= f.button :submit, "Log in" %>
              <!-- <button type="submit" class="btn btn-md btn-danger pull-right">Login </button> -->
              </div>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </fieldset>
    <% end %>

  </div>
</body>
</html>

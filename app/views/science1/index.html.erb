<div class="container" style="margin-top:50px; margin-bottom: 50px;">
  <h1>제1과기대 대관 신청서</h1>
  <hr>
  <form action="/form/create" method="POST">
    <div class="form-group row">
      <label class="col-2 col-form-label">건물 번호</label>
      <div class="col-10">
        <input class="form-control" type="text" value="9" name="building">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-2 col-form-label">강의실</label>
      <div class="col-10">
        <input class="form-control" required="required" type="search" value="<%= @room_id %>" name="class_room">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-2 col-form-label">이메일</label>
      <div class="col-10">
        <input class="form-control" required="required" type="email" value="<%= current_user.email %>" name="email">
      </div>
    </div>
    <div class="form-group row">
      <label for="example-tel-input" class="col-2 col-form-label">휴대폰 번호</label>
      <div class="col-10">
        <input class="form-control" type="tel" required="required" placeholder="ex)000-0000-0000" name="phone">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-2 col-form-label">인원수</label>
      <div class="col-10">
        <select class="form-control" name="num_p">
          <% (1..20).each do |n| %>
            <option><%= n %></option>
          <% end %>
          <option>20 이상</option>
        </select>
      </div>
    </div>
    <div class="form-group row">
      <label for="example-date-input" class="col-2 col-form-label">시작</label>
      <div class="col-10">
        <input class="form-control" required="required" type="datetime-local" id="example-date-input" name="date_s">
      </div>
    </div>
    <div class="form-group row">
      <label for="example-time-input" class="col-2 col-form-label">종료</label>
      <div class="col-10">
        <input class="form-control" required="required" type="datetime-local" id="example-time-input" name="date_e">
      </div>
    </div>
    <a class="btn btn-primary" href="/" role="button">홈으로</a>
    <button type="submit" class="btn btn-primary">제출</button>
  </form>
</div>

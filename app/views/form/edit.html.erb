<div class="container" style="margin-top:50px; margin-bottom: 50px;">
  <h1>제1과기대 대관 신청서 수정</h1>
  <hr>
  <form action="/updateview/<%= @one_post.id %>" method="POST">
    <div class="form-group row">
      <label class="col-2 col-form-label">건물 번호</label>
      <div class="col-10">
        <input class="form-control" type="text" value="<%= @one_post.building %>" name="building">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-2 col-form-label">강의실</label>
      <div class="col-10">
        <input class="form-control" required="required" type="search" value="<%= @one_post.class_num %>" name="class_room">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-2 col-form-label">이메일</label>
      <div class="col-10">
        <input class="form-control" required="required" type="email" value="<%= @one_post.email_id %>" name="email">
      </div>
    </div>
    <div class="form-group row">
      <label for="example-tel-input" class="col-2 col-form-label">휴대폰 번호</label>
      <div class="col-10">
        <input class="form-control" type="tel" required="required" placeholder="ex)000-0000-0000" name="phone" value="<%= @one_post.phone %>">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-2 col-form-label">인원수</label>
      <div class="col-10">
        <input class="form-control" required="required" type="integer" value="<%= @one_post.num_of_people %>" name="num_p" placeholder="ex) 0 (숫자만)">
      </div>
    </div>
    <div class="form-group row">
      <label for="example-date-input" class="col-2 col-form-label">시작</label>
      <div class="col-10">
        <input class="form-control" required="required" type="datetime" id="example-date-input" name="date_s" value="<%= @one_post.date_of_start %>">
      </div>
    </div>
    <div class="form-group row">
      <label for="example-time-input" class="col-2 col-form-label">종료</label>
      <div class="col-10">
        <input class="form-control" required="required" type="datetime" id="example-time-input" name="date_e" value="<%= @one_post.date_of_end %>" %>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">수정 완료</button>
  </form>
</div>
